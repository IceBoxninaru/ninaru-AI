{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
      "server/*": ["server/*"],
      "client/*": ["client/*"],
      "shared/*": ["shared/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["server/**/*", "shared/**/*", "tests/**/*", "client/**/*"],
  "exclude": ["node_modules"]
}