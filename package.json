{
    "name": "claude-kingdom",
    "version": "1.0.0",
    "description": "クロード王国 - オンラインカードゲーム",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
        "dev:server": "nodemon --exec \"npx tsx\" server/src/index.ts",
        "dev:client": "vite",
        "build": "cd client && npm run build",
        "build:client": "cd client && tsc && vite build",
        "build:server": "tsc -p server/tsconfig.json",
        "preview": "vite preview",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "start": "concurrently \"npm run server\" \"npm run client\"",
        "server": "ts-node-esm server/src/index.ts",
        "client": "cd client && npm start",
        "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
        "prepare": "husky install"
    },
    "dependencies": {
        "@types/socket.io": "^3.0.2",
        "@types/uuid": "^10.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.3",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "socket.io": "^4.7.4",
        "socket.io-client": "^4.7.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "uuid": "^9.0.1",
        "winston": "^3.17.0",
        "zod": "^3.25.51"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.11.24",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@types/socket.io-client": "^3.0.0",
        "@types/winston": "^2.4.4",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^8.0.3",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^30.0.0-beta.3",
        "jest-ts-webcompat-resolver": "^1.0.1",
        "jsdom": "^26.1.0",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.1.1",
        "ts-jest": "^29.3.4",
        "ts-node-dev": "^2.0.0",
        "tsx": "^4.19.4",
        "vite": "^5.0.10"
    },
    "main": "server/index.js",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}
